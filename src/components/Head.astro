---
import { coreSettings } from "@/settings";
import Unfont from 'unplugin-fonts/astro/component.astro';

interface Props {
  title: string
  description?: string
  image?: string
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site)

const { title, description, image } = Astro.props
---

<meta charset='utf-8' />
<meta name='viewport' content='width=device-width,initial-scale=1' />
<meta name='generator' content={Astro.generator} />

<!-- Canonical URL -->
<link rel='canonical' href={canonicalURL} />

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name='title' content={title} />
{description && description.length > 0 &&
  <meta name='description' content={description} />
}

<!-- Open Graph / Facebook -->
<meta property='og:type' content='website' />
<meta property='og:url' content={Astro.url} />
<meta property='og:title' content={title} />
{description && description.length > 0 &&
  <meta property='og:description' content={description} />
}
{image && image.length > 0 &&
  <meta property='og:image' content={new URL(image, Astro.url)} />
}

<!-- Twitter -->
<meta property='twitter:url' content={Astro.url} />
<meta property='twitter:title' content={title} />
{description && description.length > 0 &&
  <meta property='twitter:description' content={description} />
}
{image && image.length > 0 ?
  <meta property='twitter:image' content={new URL(image, Astro.url)} />
  <meta property='twitter:card' content='summary_large_image' />
:
  <meta property='twitter:card' content='summary' />
}

<!-- Theme selector scripts -->
<script is:inline define:vars={{
    lightModeTheme: coreSettings.lightModeTheme,
    darkModeTheme: coreSettings.darkModeTheme,
    defaultTheme: coreSettings.defaultTheme,
  }}>
  // Get stored theme or default
  const getStoredTheme = () => {
    const storedTheme = localStorage.getItem('theme');
    if (storedTheme) {
      return storedTheme;
    }
    // Check for system preference
    if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
      return darkModeTheme;
    }
    if (window.matchMedia('(prefers-color-scheme: light)').matches) {
      return lightModeTheme;
    }
    return defaultTheme;
  }

  // Apply theme immediately to prevent flash
  const theme = getStoredTheme();
  document.documentElement.setAttribute('data-theme', theme);
</script>
<script>
  import { themeChange } from 'theme-change'
  themeChange()
</script>

<!-- Academic Icons, Bootstrap Icons, FontAwesome 6 -->
